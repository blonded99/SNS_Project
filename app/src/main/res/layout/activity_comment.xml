<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommentActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/commentViewProfile"
            android:layout_margin="7dp"
            android:layout_width="35dp"
            android:layout_height="35dp">
        </ImageView>
        <TextView
            android:id="@+id/commentViewUserID"
            android:text="UserID"
            android:textStyle="bold"
            android:layout_margin="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>
    <ImageView
        android:id="@+id/my_img"
        android:layout_width="match_parent"
        android:layout_height="300dp">

    </ImageView>

    <TextView
        android:id="@+id/my_text"
        android:layout_below="@+id/my_img"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    </TextView>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/image_division"
        android:layout_below="@+id/my_text"
        android:background="@color/blue_01_main"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="8dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/image_division"
        android:id="@+id/commentRecyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>
    <Button
        android:id="@+id/commentSendButton"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/commentRecyclerview"
        android:layout_margin="10dp"
        android:text="SEND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Button>
    <EditText
        android:id="@+id/commentEditText"
        android:layout_toLeftOf="@+id/commentSendButton"
        android:layout_below="@+id/commentRecyclerview"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>

</RelativeLayout>